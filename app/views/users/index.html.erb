<h1><%= t('views.index') %></h1>

<table>
  <thead>
  <tr>
    <th><%= User.human_attribute_name(:id) %></th>
    <th><%= User.human_attribute_name(:self_description) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.self_description %></td>
      <td><%= link_to t('views.common.show'), user %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @users %>
