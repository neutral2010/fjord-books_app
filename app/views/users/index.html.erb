<h1><%= User.model_name.human %>一覧</h1>

<table>
  <thead>
  <tr>
    <th><%= User.human_attribute_name(:id) %></th>
    <th><%= User.human_attribute_name(:self_description) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.self_description %></td>
      <!--      <td><%#= user.postal_code %></td>-->
      <td><%= link_to t('views.common.show'), user %></td>
      <!--      <td><%#= link_to t('views.common.edit'), edit_user_path(user) %></td>-->
      <!--      <td><%#= link_to t('views.common.destroy'), user, method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>-->
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @users %>
