<h1><%= t('views.common.title_show', name: User.model_name.human) %></h1>

<p>
  <strong><%= User.human_attribute_name(:email) %>:</strong>
  <%= @user.email %>
</p>

<p>
  <%= link_to "#{FollowRelation.human_attribute_name(:follower)}   #{@user.following.count}", followers_user_path %>ï½œ
  <%= link_to "#{FollowRelation.human_attribute_name(:following)}   #{@user.followers.count}", followings_user_path %>
</p>

<p>
  <strong><%= User.human_attribute_name(:name) %>:</strong>
  <%= @user.name %>
</p>

<p>
  <strong><%= User.human_attribute_name(:postal_code) %>:</strong>
  <%= @user.postal_code %>
</p>

<p>
  <strong><%= User.human_attribute_name(:address) %>:</strong>
  <%= @user.address %>
</p>

<p>
  <strong><%= User.human_attribute_name(:self_introduction) %>:</strong>
  <%= @user.self_introduction %>
</p>

<p>
  <strong><%= User.human_attribute_name(:avatar) %>:</strong>
  <% if @user.avatar.attached? %>
    <br>
    <%= image_tag @user.avatar.variant(resize_to_fill: [150, 150]) %>
  <% end %>
</p>

<% unless @user == current_user %>
  <% if current_user.following?(@user) %>
    <%= form_with(model: current_user.active_follow_relations.find_by(followed_id: @user.id), local: true, method: :delete ) do |f| %>
    <%= hidden_field_tag :followed_id, @user.id %>
      <%= f.submit t('button.unfollow') %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.active_follow_relations.build, local: true) do |f| %>
      <%= hidden_field_tag :followed_id, @user.id %>
      <%= f.submit t('button.follow') %>
    <% end %>
  <% end %>
<% end %>

<% if current_user == @user %>
  <%= link_to t('views.common.edit'), edit_user_registration_path %> |
<% end %>

<a href="#" onclick="history.back(-1);return false;"><%= t('button.back') %></a>
