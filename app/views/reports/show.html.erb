<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @report.description %>
</p>

<% if @report.comments.present? %>
  <% @report.comments.each do |comment| %>
    <div class="comment">
      <p><%= comment.content %></p>
      <p><%= comment.created_at.to_s(:datetime_jp) %></p>
      <p>-----------------------</p>
    </div>
  <% end %>
<% end %>

<%= render 'comments/form', commentable: @report, comment: @comments %>

<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>
