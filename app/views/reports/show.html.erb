<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @report.description %>
</p>

<% if @report.comments.present? %>
  <% @report.comments.each do |comment| %>
    <li><%= link_to comment.content, comment_path(comment) %></li>
  <% end %>
<% end %>

<%= form_with(model: [@report, Comment.new]) do |form| %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


<%= link_to 'Create Comment', new_report_comment_path(@report)%>
<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>
