<h1><%= t('views.common.title_show', name: Report.model_name.human) %></h1>

<p>
  <strong><%= Report.human_attribute_name(:title)%></strong>
  <%= @report.title %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:description)%></strong>
  <%= @report.description %>
</p>

<h2><%= Comment.model_name.human %></h2>

<% if @report.comments.present? %>
  <% @report.comments.each do |comment| %>
    <div class="comment">
      <p><%= comment.content %></p>
      <% if comment.user.name.present? %>
        <p><%= comment.user.name %></p>
        <% else %>
        <p><%= comment.user.email %></p>
      <% end %>
      <p><%= comment.created_at.to_s(:datetime_jp) %></p>
<!--      <p><%#= comment.updated_at.to_s(:datetime_jp) %></p>-->
      <p>-----------------------</p>
    </div>
  <% end %>
<% end %>

<%= render 'comments/form', commentable: @report, comment: @comments %>

<%= link_to t('views.common.edit'), edit_report_path(@report) %> |
<%= link_to t('views.common.back'), reports_path %>
